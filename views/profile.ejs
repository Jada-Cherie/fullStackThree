<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>Study Halls</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <!-- <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css"> -->
    <link rel="stylesheet" href="font-awesome.min.css">
    <script src="https://unpkg.com/phosphor-icons"></script>
    <link rel="stylesheet" href="/style.css">
</head>
<body>
<div class="containerOne">

    <div class="page-header text-center">
        <h1><span class="fa fa-anchor"></span> Are you ready to focus?</h1>
        <p>Log the times that you have studied for the day to keep track of your habits!</p>
        <a href="/logout" class="btn btn-default btn-sm">Logout</a>
    </div>

    <div class="row">

        <!-- LOCAL INFORMATION -->
        <div class="col-sm-6">
            <div class="info">
                <h3></span> User's Study Hall</h3>

                <% if (user.local.email) { %>
                    <p>
                        <!-- <strong>id</strong>: <%= user._id %><br> -->
                        <strong>email</strong>: <%= user.local.email %><br>
                        <!-- <strong>password</strong>: <%= user.local.password %> -->
                    </p>

                    <a href="/unlink/local" class="btn btn-default">Unlink</a>
                <% } else { %>
                    <a href="/connect/local" class="btn btn-default">Connect Local</a>
                <% } %>

            </div>
        </div>
        <div class="container">
          <h2>Study Log</h2>
          <form id="log-form" method="post" action="/studylogs">
            <div class="form-group">
              <label for="date">Date:</label>
              <input type="date" id="date" name="date" required>
            </div>
            <div class="form-group">
              <label for="subject">Subject:</label>
              <input type="text" id="subj" name="subject" required>
            </div>
            <div class="form-group">
              <label for="time">Time (in minutes):</label>
              <input type="number" id="time" name="time" required>
            </div>
            <button type="submit" class="btn">Add Log</button>
          </form>
            <h3>StudyLogs</h3>
            <ul class="logs"></ul>
              <% for (var i = 0; i<studylogs.length; i++) { %>
                <li class="logs">
                  <span><%= studylogs[i].date %></span>
                  <span><%= studylogs[i].subject %></span>
                  <span><%= studylogs[i].time %></span>
                  <input type="date" name="" class="hide editDate" value="<%= studylogs[i].date %>">
                  <input type="text" name="" class="hide editSubject" value="<%= studylogs[i].subject %>">
                  <input type="number" name="" class="hide editTime" value="<%= studylogs[i].time %>" >
                  <span class="edit">
                    <i class="fa fa-pencil" ></i>
                  </span>
                  <span class="hide">
                    <i class="ph ph-upload-simple" data-id="<%= studylogs[i]._id %>"></i>
                  </span>
                  <span>
                    <i class="fa fa-trash" data-id="<%=studylogs[i]._id %>" ></i>
                  </span>
                </li>
              <% } %>
            </ul>
          
      
        </div>

<script src="main.js"></script>

</body>
</html>
